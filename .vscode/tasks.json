    "version": "2.0.0",
    "tasks": [
        {
            "label": "local-create",
            "type": "shell",
            "command": "New-Item",
            "args": [
                "-Path",
                "C:\\Program Files (x86)\\World of Warcraft\\_classic_\\Interface\\AddOns\\", // to be improved
                "-Name",
                "wow-addon-per-hour",
                "-ItemType",
                "directory",
                "-Force",
            ],
        },
        {
            "label": "local-remove",
            "type": "shell",
            "command": "Remove-Item",
            "args": [
                "C:\\Program Files (x86)\\World of Warcraft\\_classic_\\Interface\\AddOns\\wow-addon-per-hour", // to be improved
                "-Force",
                "-Confirm:$false",
                "-Recurse",
            ],
        },
        {
            "label": "local-copy",
            "type": "shell",
            "command": "Copy-Item",
            "args": [
                "-Path",
                "${workspaceFolder}",
                "-Destination",
                "C:\\Program Files (x86)\\World of Warcraft\\_classic_\\Interface\\AddOns", // to be improved
                "-Recurse",
            ]
        },
        {
            "label": "local-publish",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "local-create",
                "local-remove",
                "local-copy",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

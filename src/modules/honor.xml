<Ui>
	<Frame name="perhour_mainframe" parent="UIParent" enableMouse="true" movable="true">

		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>

		<Size x="192" y="38"/>

		<Frames>
			<Button name="$parent_button_start" inherits="UIPanelButtonTemplate" text="Start" >
				<Size>
					<AbsDimension x="64" y="22" />
				</Size>

				<Anchors>
					<Anchor point="topright">
						<Offset>
							<AbsDimension x="0" y="-16" />
						</Offset>
					</Anchor>
				</Anchors>
				 
				<Scripts>
					<OnClick>
						perhour_button_start_onClick()
					</OnClick>
				</Scripts>
			</Button>

			<Button name="$parent_button_stop" inherits="UIPanelButtonTemplate" text="Pause">
				<Size>
					<AbsDimension x="64" y="22" />
				</Size>
				<Anchors>
					<Anchor relativeTo="$parent_button_start" point="right" relativePoint="left">
						<Offset>
							<AbsDimension x="0" y="0" />
						</Offset>
					</Anchor>
				</Anchors>
				
				<Scripts>
					<OnClick>
						perhour_button_pause_onClick()
					</OnClick>
				</Scripts>
			</Button>

			<Button name="$parent_button_clear" inherits="UIPanelButtonTemplate" text="Clear">
				<Size>
					<AbsDimension x="64" y="22" />
				</Size>

				<Anchors>
					<Anchor relativeTo="$parent_button_stop" point="right" relativePoint="left">
						<Offset>
							<AbsDimension x="0" y="0" />
						</Offset>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnClick>
						perhour_button_clear_onClick()
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		
		<Layers>
		
			<Layer level="ARTWORK">
			
				<Texture>
					<Color a="0.5" r="0" g="0" b="0" />
				</Texture>

				<!-- title -->

				<FontString	name="$parent_label_title" inherits="GameFontNormal" text="Per Hourâ„¢">
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-3" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" a="1" />
				</FontString>

				<!-- Timer -->

				<FontString	name="$parent_label_timer" inherits="GameFontNormal" text="Timer:">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="-42" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" a="0.9" />
				</FontString>

				<FontString	name="$parent_value_timer" inherits="GameFontNormal">
					<Anchors>
						<Anchor relativeTo="$parent_label_timer" point="LEFT" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="5" y="0" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>

				<!-- Per Minute -->

				<FontString	name="$parent_label_per_minute" inherits="GameFontNormal" text="Honor/min:">
					<Anchors>
						<Anchor relativeTo="$parent_label_timer" point="TOPLEFT" relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="-20" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" a="0.9" />
				</FontString>

				<FontString	name="$parent_value_per_minute" inherits="GameFontNormal">
					<Anchors>
						<Anchor relativeTo="$parent_label_per_minute" point="LEFT" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="5" y="0" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>

				<!-- Per Hour -->

				<FontString	name="$parent_label_per_hour" inherits="GameFontNormal" text="Honor/hour:">
					<Anchors>
						<Anchor relativeTo="$parent_label_per_minute" point="TOPLEFT" relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="-20" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" a="0.9" />
				</FontString>

				<FontString	name="$parent_value_per_hour" inherits="GameFontNormal">
					<Anchors>
						<Anchor relativeTo="$parent_label_per_hour" point="LEFT" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="5" y="0" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>

				<!-- Total of Honor -->

				<FontString	name="$parent_label_total" inherits="GameFontNormal" text="Total of honor:">
					<Anchors>
						<Anchor relativeTo="$parent_label_per_hour" point="TOPLEFT" relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="-20" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" a="0.9" />
				</FontString>

				<FontString	name="$parent_value_total_honor" inherits="GameFontNormal">
					<Anchors>
						<Anchor relativeTo="$parent_label_total" point="LEFT" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="5" y="0" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>

			</Layer>
			
		</Layers>

		<Scripts>
			<OnLoad>
				perhour_onLoad(this)
			</OnLoad>

			<OnEvent>
				perhour_onEvent(this, event, ...)
			</OnEvent>

			<OnUpdate>
				perhour_onUpdate(this)
			</OnUpdate>

			<OnMouseDown>
				perhour_onMouseDown()
			</OnMouseDown>

			<OnMouseUp>
				perhour_onMouseUp()
			</OnMouseUp>
		</Scripts>

	</Frame>
</Ui>













<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<Script file="Honor.lua"/>
	<Frame name="HonorPerHourMainFrame" parent="UIParent" enableMouse="true" movable="true">
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Size x="192" y="38"/>
		<Frames>
			<Button name="$parentButtonStart" inherits="UIPanelButtonTemplate" text="Start">
				<Size>
					<AbsDimension x="64" y="22" />
				</Size>
				<Anchors>
					<Anchor point="topright">
						<Offset>
							<AbsDimension x="0" y="-16" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						PerHourButtonStart_OnClick()
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parentButtonPause" inherits="UIPanelButtonTemplate" text="Pause">
				<Size>
					<AbsDimension x="64" y="22" />
				</Size>
				<Anchors>
					<Anchor relativeTo="$parentButtonStart" point="right" relativePoint="left">
						<Offset>
							<AbsDimension x="0" y="0" />
						</Offset>
					</Anchor>
				</Anchors>
				
				<Scripts>
					<OnClick>
						PerHourButtonPause_OnClick()
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parentButtonClear" inherits="UIPanelButtonTemplate" text="Clear">
				<Size>
					<AbsDimension x="64" y="22" />
				</Size>

				<Anchors>
					<Anchor relativeTo="$parentButtonPause" point="right" relativePoint="left">
						<Offset>
							<AbsDimension x="0" y="0" />
						</Offset>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnClick>
						PerHourButtonClear_OnClick()
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Layers>
			<Layer level="ARTWORK">
				<Texture>
					<Color a="0.5" r="0" g="0" b="0" />
				</Texture>
				<!-- title -->
				<FontString	name="$parentLabelHonorTitle" inherits="GameFontNormal" text="Honor Per Hourâ„¢">
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-3" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" a="1" />
				</FontString>
				<!-- Timer -->
				<FontString	name="$parentLabelHonorTimer" inherits="GameFontNormal" text="Timer:">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="-42" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" a="0.9" />
				</FontString>
				<FontString	name="$parentValueHonorTimer" inherits="GameFontNormal">
					<Anchors>
						<Anchor relativeTo="$parentLabelHonorTimer" point="LEFT" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="5" y="0" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<!-- Per Minute -->
				<FontString	name="$parentLabelHonorPerMinute" inherits="GameFontNormal" text="Honor/min:">
					<Anchors>
						<Anchor relativeTo="$parentLabelHonorTimer" point="TOPLEFT" relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="-20" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" a="0.9" />
				</FontString>
				<FontString	name="$parentValueHonorPerMinute" inherits="GameFontNormal">
					<Anchors>
						<Anchor relativeTo="$parentLabelHonorPerMinute" point="LEFT" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="5" y="0" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<!-- Per Hour -->
				<FontString	name="$parentLabelHonorPerHour" inherits="GameFontNormal" text="Honor/hour:">
					<Anchors>
						<Anchor relativeTo="$parentLabelHonorPerMinute" point="TOPLEFT" relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="-20" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" a="0.9" />
				</FontString>
				<FontString	name="$parentValueHonorPerHour" inherits="GameFontNormal">
					<Anchors>
						<Anchor relativeTo="$parentLabelHonorPerHour" point="LEFT" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="5" y="0" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<!-- Total of Honor -->
				<FontString	name="$parentLabelHonorTotal" inherits="GameFontNormal" text="Total of honor:">
					<Anchors>
						<Anchor relativeTo="$parentLabelHonorPerHour" point="TOPLEFT" relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="-20" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" a="0.9" />
				</FontString>
				<FontString	name="$parentValueHonorTotalHonor" inherits="GameFontNormal">
					<Anchors>
						<Anchor relativeTo="$parentLabelHonorTotal" point="LEFT" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="5" y="0" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				HonorPerHour_OnLoad(this)
			</OnLoad>
			<OnEvent>
				HonorPerHour_OnEvent(this, event, ...)
			</OnEvent>
			<!-- <OnUpdate>
				HonorPerHour_OnUpdate(this)
			</OnUpdate> -->
			<OnMouseDown>
				HonorPerHour_OnMouseDown()
			</OnMouseDown>
			<OnMouseUp>
				HonorPerHour_OnMouseUp()
			</OnMouseUp>
		</Scripts>
	</Frame>
</Ui>
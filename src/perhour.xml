<Ui>

	<Frame name="perhour_mainframe" parent="UIParent" enableMouse="true" movable="true">
		
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>

		<Size x="180" y="30"/>

		<Frames>
			<Button name="$parent_button_start">
				<Size>
					<AbsDimension x="20" y="20" />
				</Size>
				<Anchors>
					<Anchor point="right">
						<Offset>
							<AbsDimension x="-5" y="0" />
						</Offset>
					</Anchor>
				</Anchors>
				<NormalTexture file="Interface\Buttons\UI-PlusButton-Up" />
				<HighlightTexture file="Interface\Buttons\UI-PlusButton-Down" />
				<Scripts>
					<OnClick>
						perhour_button_start_onClick()
					</OnClick>
				</Scripts>
			</Button>

			<Button name="$parent_button_stop">
				<Size>
					<AbsDimension x="20" y="20" />
				</Size>
				<Anchors>
					<Anchor point="right"
							relativeTo="$parent_button_start"
							relativePoint="left">
						<Offset>
							<AbsDimension x="0" y="0" />
						</Offset>
					</Anchor>
				</Anchors>
				<NormalTexture file="Interface\Buttons\UI-MinusButton-Up" />
				<HighlightTexture file="Interface\Buttons\UI-MinusButton-Down" />
				<Scripts>
					<OnClick>
						perhour_button_stop_onClick()
					</OnClick>
				</Scripts>
			</Button>

			<Button name="$parent_button_reset">
				<Size>
					<AbsDimension x="20" y="20" />
				</Size>
				<Anchors>
					<Anchor point="right"
							relativeTo="$parent_button_stop"
							relativePoint="left">
						<Offset>
							<AbsDimension x="0" y="0" />
						</Offset>
					</Anchor>
				</Anchors>
				<NormalTexture file="Interface\Buttons\UI-GroupLoot-Dice-Up" />
				<HighlightTexture file="Interface\Buttons\UI-GroupLoot-Dice-Highlight" />
				<Scripts>
					<OnClick>
						perhour_button_reset_onClick()
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		
		<Layers>
			<Layer level="ARTWORK">
			
				<Texture>
					<Color a="0.5" r="0" g="0" b="0" />
				</Texture>

				<!-- title -->

				<FontString	name="$parent_label_title"
							inherits="GameFontNormalLarge"
							text="PerHour â„¢"
							justifyV="TOP"
							justifyH="RIGHT">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="7" y="-8" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" a="1" />
				</FontString>


				<!-- Timer -->

				<FontString	name="$parent_label_timer"
							inherits="GameFontNormal"
							text="Timer:"
							justifyV="TOP"
							justifyH="RIGHT">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="-38" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" a="0.9" />
				</FontString>

				<FontString	name="$parent_value_timer"
							inherits="GameFontNormal"
							text="None"
							justifyV="MIDDLE"
							justifyH="CENTER">
					<Anchors>
						<Anchor point="LEFT"
								relativeTo="$parent_label_timer"
								relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="5" y="0" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>

				<!-- Per Minute -->

				<FontString	name="$parent_label_per_minute"
							inherits="GameFontNormal"
							text="Honor per minute:"
							justifyV="TOP"
							justifyH="RIGHT">
					<Anchors>
						<Anchor point="TOPLEFT"
								relativeTo="$parent_label_timer"
								relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="-20" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" a="0.9" />
				</FontString>

				<FontString	name="$parent_value_per_minute"
							inherits="GameFontNormal"
							text="None"
							justifyV="MIDDLE"
							justifyH="CENTER">
					<Anchors>
						<Anchor point="LEFT"
								relativeTo="$parent_label_per_minute"
								relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="5" y="0" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>

				<!-- Per Hour -->

				<FontString	name="$parent_label_per_hour"
							inherits="GameFontNormal"
							text="Honor per hour:"
							justifyV="TOP"
							justifyH="RIGHT">
					<Anchors>
						<Anchor point="TOPLEFT"
								relativeTo="$parent_label_per_minute"
								relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="-20" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" a="0.9" />
				</FontString>

				<FontString	name="$parent_value_per_hour"
							inherits="GameFontNormal"
							text="None"
							justifyV="TOP"
							justifyH="RIGHT">
					<Anchors>
						<Anchor point="LEFT"
								relativeTo="$parent_label_per_hour"
								relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="5" y="0" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>

				<!-- Total of Honor -->

				<FontString	name="$parent_label_total"
							inherits="GameFontNormal"
							text="Total of honor:"
							justifyV="TOP"
							justifyH="RIGHT">
					<Anchors>
						<Anchor point="TOPLEFT"
								relativeTo="$parent_label_per_hour"
								relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="-20" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" a="0.9" />
				</FontString>

				<FontString	name="$parent_value_total"
							inherits="GameFontNormal"
							text="None"
							justifyV="TOP"
							justifyH="RIGHT">
					<Anchors>
						<Anchor point="LEFT"
								relativeTo="$parent_label_total"
								relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="5" y="0" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>

			</Layer>
		</Layers>

		<Scripts>
			<OnLoad>
				perhour_onLoad(this)
			</OnLoad>

			<OnEvent>
				perhour_onEvent(this, event, ...)
			</OnEvent>

			<OnUpdate>
				perhour_onUpdate(this)
			</OnUpdate>

			<OnMouseDown>
				perhour_onMouseDown()
			</OnMouseDown>

			<OnMouseUp>
				perhour_onMouseUp()
			</OnMouseUp>
		</Scripts>

	</Frame>
</Ui>












